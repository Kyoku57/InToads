<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ControlActivity" >

    <Button
        android:id="@+id/button_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:enabled="true"
        android:text="@string/start_action" />

    <TextView
        android:id="@+id/labelTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_start"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:text="@string/team_select" />

    <Spinner
        android:id="@+id/team_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/riders_spinner"
        android:layout_below="@+id/labelTeam" />

    <Spinner
        android:id="@+id/riders_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelRider"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/labelRider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/riders_spinner"
        android:layout_alignLeft="@+id/labelTeam"
        android:text="@string/rider_name" />

  

</RelativeLayout>